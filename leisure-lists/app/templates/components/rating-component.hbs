<div class="clearfix">
  <h3>Rating</h3>
  <div class="rating">
    {{#each ratingsStars as |star|}}
    <span class="{{star.class}}" value={{star.value}} {{action "addRating" star.value}}>
      <svg version="1.1" aria-hidden="true" role="img" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
      	 viewBox="0 0 3.4 3.2" style="enable-background:new 0 0 3.4 3.2;" xml:space="preserve">
         <polygon points="1.7,0.2 2.2,1.1 3.2,1.3 2.5,2 2.6,3.1 1.7,2.6 0.7,3.1 0.9,2 0.2,1.3 1.2,1.1 "/>
      </svg>
    </span>
    {{/each}}
  </div>
</div>
